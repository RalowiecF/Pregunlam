<div class="w3-container"
     style="flex: 1; position: relative; padding-top: 40px; display: flex; flex-direction: column; justify-content: center;">

    <!-- Botón Puntaje (arriba a la derecha) -->
    {{#usuarioLogueado}}
        <div class="w3-display-topright w3-padding">
            <button class="w3-button w3-green w3-round-large">
                Mi puntaje: {{usuarioLogueado.puntaje}}
            </button>
        </div>
    {{/usuarioLogueado}}

    <!-- Botón Estadísticas (arriba a la izquierda, solo admin) -->
    {{#usuarioLogueado}}
        {{#usuarioLogueado.isAdmin}}
            <div class="w3-display-topleft w3-padding">
                <a href="{{BASE_URL}}estadisticas/seleccion" class="w3-button w3-blue w3-round-large">Estadísticas</a>
            </div>
        {{/usuarioLogueado.isAdmin}}
    {{/usuarioLogueado}}

    <!-- Contenedor principal centrado verticalmente dentro del área -->
    <div class="w3-row-padding"
         style="display: flex; justify-content: center; align-items: center; flex: 1; height: 100%;">

        <!-- Columna izquierda (JUGAR + SUGERIR PREGUNTA) -->
        <div class="w3-half w3-center w3-padding"
             style="min-width:300px; display:flex; flex-direction:column; align-items:center; justify-content:center; gap:20px;">

            <!-- Recuadro grande para JUGAR -->
            <div class="w3-card w3-hover-shadow w3-round-large w3-padding"
                 style="cursor:pointer; max-width:350px; width:100%; margin:auto; background-color:#a8f0b1;"
                {{#usuarioLogueado}}
                 onclick="window.location='{{BASE_URL}}partida/jugar'"
                {{/usuarioLogueado}}
                {{^usuarioLogueado}}
                 onclick="mostrarMensaje('Ingresá al sitio para Jugar')"
                {{/usuarioLogueado}}>
                <img src="/PregUNLaM/imagenes/Jugar.png" alt="Jugar" style="width:100%; border-radius:8px;">
                <h2 class="w3-text-black" style="text-shadow: 1px 1px #fff;">JUGAR</h2>
            </div>

            <!-- Botón Sugerir Pregunta -->
            <div>
                {{#usuarioLogueado}}
                    <button class="w3-button w3-blue w3-round-large w3-hover-green"
                            style="width: 100%; max-width: 350px;"
                            onclick="window.location='{{BASE_URL}}pregunta/registroPreguntaForm'">
                        Sugerir pregunta
                    </button>
                {{/usuarioLogueado}}

                {{^usuarioLogueado}}
                    <button class="w3-button w3-blue w3-round-large w3-hover-green"
                            style="width: 100%; max-width: 350px;"
                            onclick="mostrarMensaje('Ingresá al sitio para sugerir preguntas')">
                        Sugerir pregunta
                    </button>
                {{/usuarioLogueado}}
            </div>

            <!-- Contenedor de mensajes -->
            <div id="mensaje" class="w3-panel w3-red w3-round w3-animate-opacity w3-hide"
                 style="position: absolute; bottom: 20px; left: 50%; transform: translateX(-50%);
                  z-index: 10; min-width: 250px; text-align:center;"></div>
        </div>

        <!-- Columna derecha (RANKING) -->
        <div class="w3-half w3-center w3-padding"
             style="min-width:300px; display:flex; align-items:center; justify-content:center;">
            <div class="w3-card w3-hover-shadow w3-round-large w3-padding"
                 style="cursor:pointer; max-width:350px; width:100%; height:100%; background-color:#bcdcff; display:flex; flex-direction:column; justify-content:center;"
                 onclick="window.location='{{BASE_URL}}usuario/ranking'">
                <h2 class="w3-text-black" style="text-shadow: 1px 1px #fff;">RANKING</h2>
                <img src="/PregUNLaM/imagenes/Ranking.png" alt="Ranking" style="width:100%; border-radius:8px;">
            </div>
        </div>

    </div>

    <!-- Botón Administrar Preguntas (debajo del contenido principal) -->
    <div class="w3-center w3-padding" style="margin-top: 1px;">
        {{#usuarioLogueado}}
            {{#usuarioLogueado.isAdmin}}
                <a href="{{BASE_URL}}pregunta/administracion" class="w3-button w3-green w3-round-large">
                    Administrar Preguntas
                </a>
            {{/usuarioLogueado.isAdmin}}
            {{#usuarioLogueado.isEditor}}
                <a href="{{BASE_URL}}pregunta/administracion" class="w3-button w3-green w3-round-large">
                    Administrar Preguntas
                </a>
            {{/usuarioLogueado.isEditor}}
        {{/usuarioLogueado}}
    </div>
</div>

<script>
    function mostrarMensaje(texto) {
        const msg = document.getElementById('mensaje');
        msg.textContent = texto;
        msg.classList.remove('w3-hide');
        clearTimeout(msg.dataset.timeout);
        msg.dataset.timeout = setTimeout(() => msg.classList.add('w3-hide'), 3000);
    }
</script>
